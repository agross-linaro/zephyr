#include <arm/armv7-m.dtsi>
#include <st/mem.h>
#include <st/pinmux_stm32l4x.h>
#include <st/pinmux_stm32.h>

/ {
	flash0: flash {
		reg = <0x08000000 DT_FLASH_SIZE>;
	};

	sram0: memory {
		reg = <0x20000000 DT_SRAM_SIZE>;
	};

	soc {

		pinmux_stm32: pinmux-controller@baae100  {
			compatible = "st,stm32-pinmux";
			status = "ok";
			reg = <0x4004a000 0xd0>;
			clocks = <0x5 0x1038 0xa>;
                        #pinctrl-cells = <2>;

			uart1_default: uart1_default {
				rx_tx {
                                       rx = <STM32_PIN_PB6 (STM32_PINMUX_FUNC_ALT_7 | STM32_MODER_ALT_MODE | STM32_OTYPER_PUSH_PULL | STM32_PUPDR_NO_PULL)>;
				       tx = <STM32_PIN_PB7 (STM32_PINMUX_FUNC_ALT_7 | STM32_MODER_ALT_MODE | STM32_OTYPER_PUSH_PULL | STM32_PUPDR_NO_PULL)>;
                                };
			};
			uart1_lp: uart1_lp {
				rx_tx {
                                       rx = <STM32_PIN_PA1 (STM32_PINMUX_FUNC_ALT_7 | STM32_MODER_ALT_MODE | STM32_OTYPER_PUSH_PULL | STM32_PUPDR_NO_PULL)>;
				       tx = <STM32_PIN_PA9 (STM32_PINMUX_FUNC_ALT_7 | STM32_MODER_ALT_MODE | STM32_OTYPER_PUSH_PULL | STM32_PUPDR_NO_PULL)>;
                                };
			};
			uart2_default: uart2_default {
				rx_tx {
                                       rx = <STM32_PIN_PA2 (STM32_PINMUX_FUNC_ALT_7 | STM32_MODER_ALT_MODE | STM32_OTYPER_PUSH_PULL | STM32_PUPDR_NO_PULL)>;
				       tx = <STM32_PIN_PA3 (STM32_PINMUX_FUNC_ALT_7 | STM32_MODER_ALT_MODE | STM32_OTYPER_PUSH_PULL | STM32_PUPDR_NO_PULL)>;
                                };
			};
		};

		usart1: serial@40013800 {
			compatible = "st,stm32-usart", "st,stm32-uart";
			reg = <0x40013800 0x400>;
			interrupts = <37 0>;
			status = "disabled";
			label = "UART_1";

			pinctrl-0 = <&uart1_default>;
                        pinctrl-1 = <&uart1_lp>;
			pinctrl-names = "uart1_rx_tx";
		};

		usart2: serial@40004400 {
			compatible = "st,stm32-usart", "st,stm32-uart";
			reg = <0x40004400 0x400>;
			interrupts = <38 0>;
			status = "disabled";
			label = "UART_2";
			pinctrl-0 = <&uart2_default>;
			pinctrl-names = "uart2_rx_tx";
		};

		usart3: serial@40004800 {
			compatible = "st,stm32-usart", "st,stm32-uart";
			reg = <0x40004800 0x400>;
			interrupts = <39 0>;
			status = "disabled";
			label = "UART_3";
		};

		uart4: serial@40004c00 {
			compatible = "st,stm32-uart";
			reg = <0x40004c00 0x400>;
			interrupts = <52 0>;
			status = "disabled";
			label = "UART_4";
		};

		uart5: serial@40005000 {
			compatible = "st,stm32-uart";
			reg = <0x40005000 0x400>;
			interrupts = <53 0>;
			status = "disabled";
			label = "UART_5";
		};

	};
};

&nvic {
	arm,num-irq-priority-bits = <4>;
};
